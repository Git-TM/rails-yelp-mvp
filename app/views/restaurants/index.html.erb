
<%= render file: "./layouts/banner.html.erb" %>

<h2>All the restaurants over here..</h2>
<div class="cards">
<% @restaurants.each do |restaurant| %>
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
  <%= link_to restaurant.name, restaurant_path(restaurant)%>
  <span class=""><%= restaurant.review.rating %></span>
  </div>
<% end %>
</div>

<%= link_to "Add a new restaurant", new_restaurant_path%>
